<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
		.center {
			margin-left: auto;
			margin-right:auto;
		}
	</ui:style>
	<b:Row>
	        
	    <b:Column size="2" offset="5">
	        <b:Row>
			<g:HTMLPanel>
			   <div align="center" styleName="{style.center}">
			    	<b:Paragraph>An Error occured...</b:Paragraph>
			    	<b:Icon type="EXCLAMATION" size="FOUR_TIMES" />	       
			   </div>
			</g:HTMLPanel>
			</b:Row>
			<b:Row>
			<g:HTMLPanel>
			   <div align="center" styleName="{style.center}">
			    	<b:Paragraph>Details:</b:Paragraph>
			    	<b:Paragraph ui:field="error_details"></b:Paragraph>	       
			   </div>
			</g:HTMLPanel>
			</b:Row>
	    </b:Column>

	</b:Row>
</ui:UiBinder> 